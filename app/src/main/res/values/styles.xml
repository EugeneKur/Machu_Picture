<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="heading_text_style">
        <item name="android:textColor">?themeColorPrimary</item>
        <item name="android:textSize">@dimen/heading_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">3dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/text_field_background</item>
    </style>

    <style name="CardMediumShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeBottomRight">25dp</item>
        <item name="cornerSizeTopLeft">25dp</item>
    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/CardMediumShape</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="AppShapeAppearance.SmallComponent.Angular" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">3dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent.Angular" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="FloatingActionButtonMy" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="FloatingActionButtonMyAngle" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="cornerFamily">cut</item>
    </style>
    <style name="BottomBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:gravity">bottom</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="fabAlignmentMode">center</item>
        <item name="fabCradleRoundedCornerRadius">50dp</item>
        <item name="fabCradleMargin">3dp</item>
        <item name="fabAnimationMode">slide</item>
        <item name="hideOnScroll">true</item>
    </style>


</resources>